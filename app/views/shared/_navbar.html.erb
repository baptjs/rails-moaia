<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "manta-ray-shape.png" %>
  <% end %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active left"><%= link_to "Discover", spots_path, class: "nav-link" %></li>
      <li class="nav-item active left"><%= link_to "Friends", "#", class: "nav-link" %></li>
      <li class="nav-item active left"><%= link_to "Favorites", "#", class: "nav-link" %></li>
    </ul>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
