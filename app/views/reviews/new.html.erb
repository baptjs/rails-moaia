<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "auelvkeqlturd553avr1", cloud_name: "djngsqazo" , crop: :fill %>'); background-size: cover; background-position: 50% 45%;">

  <div class="spot-new-container">
    <h1>How was <%= @spot.name %>? </h1>
    <h5>Share your experience here</h5>

    <%= simple_form_for [@spot, @review] do |f| %>
      <div class="container-date-rating">
        <%= f.input :date, class: "date", label: "Date of your dive" %>
        <%= f.input :rating, input_html: { min: '0', max: '5' }, as: :hidden %>
        <div class="form-rating my-3">
          <% 5.times do |index| %>
            <i id="<%= index + 1 %>" class="review-rating far fa-star"></i>
          <% end %>
        </div>
      </div>
      <%= f.input :content %>
      <%= f.input :tips %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>

      <div class="btn-container">
        <%= f.button :submit, "Submit you review!", class: 'btn-submit' %>
      </div>
    <% end %>

  </div>


</div>
