<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path "auelvkeqlturd553avr1", cloud_name: "djngsqazo" , crop: :fill %>'); background-size: cover; background-position: 50% 45%;">

  <div class="spot-new-container">
    <h1>You've found an incredible diving spot?</h1>
    <h5>Share it here</h5>

    <%= simple_form_for @spot do |f| %>
      <%= f.input :name, label: "Spot name" %>
      <%= f.input :region  %>
      <div class="coordinates">
        <div class="lat"><%= f.input :latitude %></div>
        <div class="long"><%= f.input :longitude %></div>
      </div>
      <%= f.input :description %>
      <%= f.input :spot, :as => :hidden, :input_html => { :value => @spot }  %>
      <div class="tags">
        <%= f.input :init_tags, label: "Type of dive", required: true, collection: Tag.first(6), input_html: { multiple: true, class: 'multiple-select' }, include_hidden: false %>
        <%= f.input :init_tags, label: "Difficulty", required: true, collection: Tag.all[6,4], input_html: { multiple: true, class: 'multiple-select'  }, include_hidden: false %>
        <%= f.input :init_tags, label: "Attractions", required: true, collection: Tag.all[10,7], input_html: { multiple: true, class: 'multiple-select' }, include_hidden: false %>
      </div>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>


      <div class="btn-container"><%= f.button :submit, "Add this spot!", class: 'btn-submit' %></div>
    <% end %>
    <!-- <p><em>(and don't forget to review it as well...)</em></p> -->
  </div>


</div>



